@using agilesheel.Models
@model agilesheel.ViewModels.TicketsViewModel

@{
    ViewData["Title"] = Html.DisplayFor(model => model.Ticket.Code);
}

<div class="container-fluid">
    <h1>Ticket: @Model.Ticket.Name</h1>

    <div class="touchscreen">
        <h4>Ticket</h4>
        <hr />
        <h1>@Model.Movie.Title</h1>
        <h2>@Model.Show.StartTime</h2>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ticket.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ticket.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ticket.Code)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ticket.Code)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ticket.Price)
            </dt>
            <dd class="col-sm-10">
                @ViewBag.Price
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ticket.SeatNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ticket.SeatNumber)
            </dd>
            <dt class="col-sm-2">
                Row
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ticket.SeatRowId)
            </dd>
            <dt class="col-sm-2">
                Theater
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Show.Theater.Name)
            </dd>
        </dl>
    </div>
    <div class="touchscreen">
        <a class="btn btn-info" asp-controller="TouchscreenMovies" asp-action="Index">Print ticket</a>
    </div>
</div>
