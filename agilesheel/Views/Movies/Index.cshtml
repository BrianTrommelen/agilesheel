@using agilesheel.Models
@model agilesheel.ViewModels.MovieViewModel

@{
    ViewData["Title"] = "Index";
}

@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@

<div class="container">
    <div class="row justify-content-end">
        <ul>
            <li class="d-inline-block">
                <a class="nav-link text-dark" asp-controller="Movies" asp-action="Index">Movies</a>
            </li>
            <li class="d-inline-block">
                <a class="nav-link text-dark" href="#">Cinemas</a>
            </li>
            <li class="d-inline-block">
                <a class="nav-link text-dark" href="#">Contact</a>
            </li>
        </ul>
    </div>
</div>
<section class="banner bg-dark">
    <img class="img-fluid banner-image" src="/lib/images/bioscoop-digitaal.jpg" alt="Agilesheel Cinemas" />
</section>

<div class="row">
    <div class="col-12 col-lg-10 offset-lg-1">
        <div class="my-5">
            <h2 class="my-4 text-center">Featured movies</h2>
            <div class="media">
                <img class="img-fluid mr-5" src="/lib/images/bioscoop-digitaal.jpg" width="400" height="400" alt="Alternate Text" />
                <div class="media-body">
                    <h3>Movie title</h3>

                    <p>Text van uitgelichte film </p>

                    <a class="btn btn-lg btn-outline-dark" href="#">Read more</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="text-center my-5">
                <h2>Current movies</h2>
            </div>
        </div>


        <div class="col-12 justify-content-end">
            <ul>
                <li class="d-inline-block">
                    <a class="nav-link text-dark" href="#filterKidsMovies">Kids</a>
                </li>
                <li class="d-inline-block">
                    <a class="nav-link text-dark" href="#filter3D">3D</a>
                </li>
                <li class="d-inline-block">
                    <a class="nav-link text-dark" href="#genreDropdownToDo">Genre</a>
                </li>
            </ul>
        </div>


        @foreach (var item in Model.Movies)
        {
            <div class="col-4 col-lg-3 col-xl-2">
                <a class="movie-item" asp-controller="Movies" asp-action="Movie" asp-route-id="@item.Id">
                    <img src="@Html.DisplayFor(modelItem => item.PosterUrl)" alt="@Html.DisplayFor(modelItem => item.Title)" height="300" />
                    <h1 class="h6">@Html.DisplayFor(modelItem => item.Title)</h1>
                    <span>@Html.DisplayFor(modelItem => item.Genre)</span>
                    <span>Pegi: @Html.DisplayFor(modelItem => item.ParentalRating)</span>

                    @if (item.Is3D)
                    {
                        <span>3D</span>
                    }
                </a>
            </div>
        }
    </div>
</div>