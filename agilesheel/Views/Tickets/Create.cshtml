@using agilesheel.Models
@model agilesheel.ViewModels.TicketsViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            

            <h1>Seatnumber: @Model.Seat[1] SeatRow: @Model.Seat[0]</h1>
            <div class="form-group">
                <select asp-for="Ticket.ShowId" class="form-select" aria-label="Default select example">
                    <option selected>Select show</option>
                    @foreach (Show show in Model.Shows)
                    {
                        <option value="@show.Id">Film @Model.GetMovieFromShowId(show.Id).Title</option>
                    }

                </select>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.Name" class="control-label"></label>
                <input asp-for="Ticket.Name" class="form-control" />
                <span asp-validation-for="Ticket.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.Code" class="control-label"></label>
                <input asp-for="Ticket.Code" class="form-control" />
                <span asp-validation-for="Ticket.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.Price" class="control-label"></label>
                <input asp-for="Ticket.Price" class="form-control" />
                <span asp-validation-for="Ticket.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.SeatNumber" class="control-label"></label>
                <input asp-for="Ticket.SeatNumber" class="form-control" />
                <span asp-validation-for="Ticket.SeatNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.SeatRowId" class="control-label"></label>
                <input asp-for="Ticket.SeatRowId" class="form-control" />
                <span asp-validation-for="Ticket.SeatRowId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
