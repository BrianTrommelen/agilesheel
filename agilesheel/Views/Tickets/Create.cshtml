@model agilesheel.ViewModels.TicketsViewModel
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@using agilesheel.Helpers

@{
    ViewData["Title"] = "Order";
}
<div class="container-fluid">
    <form asp-action="Create">
        <div class="row">
            <div class="col-12">
                <h1>@Model.Movie.Title</h1>
                <h2>@Model.Show.StartTime</h2>
                <hr />
            </div>
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h2>Seatnumber: @Model.Seat[1]</h2>
                <h2>SeatRow: @Model.Seat[0]</h2>

                <input type="hidden" value="@User.GetUserId()" asp-for="Ticket.UserId" />

                <div class="form-group">
                    <input asp-for="Ticket.ShowId" value="@Model.Show.Id" readonly hidden />
                    <span asp-validation-for="Ticket.ShowId" class="text-danger"></span>
                </div>
                @if (User.IsInRole("Cashier"))
                {
                    <div class="form-group">
                        <input asp-for="Ticket.VerkoperId" value="@User.Identity.Name" readonly hidden />
                        <span asp-validation-for="Ticket.VerkoperId" class="text-danger"></span>
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <input asp-for="Ticket.VerkoperId" value="Self-service" readonly hidden />
                        <span asp-validation-for="Ticket.VerkoperId" class="text-danger"></span>
                    </div>
                }
                <div class="form-group">
                    <label asp-for="Ticket.SeatNumber" class="control-label"></label>
                    <input asp-for="Ticket.SeatNumber" readonly value="@Model.Seat[1]" class="form-control" />
                    <span asp-validation-for="Ticket.SeatNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ticket.SeatRowId" class="control-label"></label>
                    <input asp-for="Ticket.SeatRowId" readonly value="@Model.Seat[0]" class="form-control" />
                    <span asp-validation-for="Ticket.SeatRowId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Buy Ticket" class="btn btn-primary" />
                </div>
            </div>

            <div class="col-md-4">
                @foreach (var r in Model.Rates)
                {
                    <div class="form-group">
                        <div class="card">
                            <div class="card-header">
                                <div class="form-check">
                                    <input class="form-check-input w-auto float-left" type="radio" value="@r.Id" id="@r.Id" name="Ticket.Name" asp-for="Ticket.Name" />
                                    <label class="form-check-label w-100 float-right" for="@r.Id">Select this option</label>
                                    <span asp-validation-for="Ticket.Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="card-body">
                                @r.Name (<strong>€ @string.Format("{0:0.00}", r.Price + (Model.Movie.Length > 120 ? .5 : 0))</strong>)
                                @if (r.Conditions.Length > 0)
                                {
                                    <ul>
                                        @foreach (var c in r.Conditions.Split(Environment.NewLine))
                                        {
                                            <li>@c</li>
                                        }
                                    </ul>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div>
            <a class="btn btn-info" asp-controller="TouchscreenMovies" asp-action="Details" asp-route-id="@Model.Movie.Id">Back to Movie</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}