            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cinema.Name)
            </dd>
            <dt class="col-sm-10">
                E-mail
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cinema.Email)
            </dd>
            <dt class="col-sm-10">
                Phone
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cinema.Tel)
            </dd>
            <dt class="col-sm-10">
